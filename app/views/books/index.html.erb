<div class="container mx-auto px-4 py-8">
  <!-- Navigation -->
  <nav class="bg-white rounded-lg shadow-md p-4 mb-8">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold text-blue-600">📚 Tadoku-kun</h1>
      
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <span class="text-gray-700">こんにちは、<%= current_user.nickname %>さん！</span>
          <%= link_to "読了記録", reading_logs_path, class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to "ランキング", users_path, class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to "ログアウト", destroy_user_session_path, data: { "turbo-method": :delete }, class: "bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to "新規登録", new_user_registration_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="flex justify-between items-center mb-8">
    <h2 class="text-3xl font-bold text-gray-900">多読図書リスト</h2>
  </div>

  <!-- 検索・フィルタフォーム -->
  <%= form_with url: books_path, method: :get, local: true, class: "mb-8" do |form| %>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= form.text_field :search, 
                              placeholder: "書籍タイトルで検索", 
                              value: params[:search],
                              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        
        <div>
          <%= form.select :yomiyasusa_level, 
                          options_for_select([
                            ['全てのレベル', ''],
                            ['YL 0.0-0.9', '0.5'],
                            ['YL 1.0-1.9', '1.5'],
                            ['YL 2.0-2.9', '2.5'],
                            ['YL 3.0-3.9', '3.5'],
                            ['YL 4.0-4.9', '4.5'],
                            ['YL 5.0以上', '5.0']
                          ], params[:yomiyasusa_level]),
                          {},
                          { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
        </div>
        
        <div>
          <%= form.select :sort,
                          options_for_select([
                            ['タイトル順', ''],
                            ['語数（少ない順）', 'word_count_asc'],
                            ['語数（多い順）', 'word_count_desc'],
                            ['YL（易しい順）', 'level_asc'],
                            ['YL（難しい順）', 'level_desc']
                          ], params[:sort]),
                          {},
                          { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
        </div>
        
        <div>
          <%= form.submit "検索", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- 書籍リスト -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">
          <%= link_to book.title, book_path(book), class: "text-blue-600 hover:text-blue-800" %>
        </h3>
        
        <div class="text-sm text-gray-600 mb-4">
          <p>著者: <%= book.author %></p>
        </div>
        
        <div class="flex justify-between items-center">
          <div class="flex space-x-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              YL <%= book.yomiyasusa_level %>
            </span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <%= number_with_delimiter(book.word_count) %>語
            </span>
          </div>
          
          <% if user_signed_in? && book.read_by?(current_user) %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              ✓ 読了済み
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @books.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">条件に合う書籍が見つかりませんでした。</p>
    </div>
  <% end %>
</div>
